<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="40dp"
        android:id="@+id/buddy_holder_avatar"
        android:src="@color/colorAccent"
        android:layout_height="40dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="8dp"
        android:layout_width="16dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:id="@+id/buddy_holder_online"
        android:src="@color/colorPrimary"
        android:layout_height="16dp" />

    <TextView
        android:id="@+id/buddy_holder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buddy_holder_avatar"
        android:layout_toEndOf="@+id/buddy_holder_avatar"
        android:maxLines="1"
        android:padding="8dp"
        android:text="@string/lorem"
        android:textColor="@color/primary"
        android:textSize="18sp" />


</RelativeLayout>