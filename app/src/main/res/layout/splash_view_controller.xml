<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_view_controller_monster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/monster" />

    <TextView
        android:id="@+id/splash_view_controller_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/splash_view_controller_monster"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_5"
        android:textSize="44sp" />

    <TextView
        android:id="@+id/splash_view_controller_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/splash_view_controller_app_name"
        android:gravity="center"
        android:textColor="@color/hint"
        android:text="@string/app_name"
        android:textSize="18sp" />

</RelativeLayout>